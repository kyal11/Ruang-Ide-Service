model users {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  nim          String   @unique
  phone_number String
  verified     Boolean  @default(false)
  image_url    String?
  role         Role  @default(user)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

enum Role {
  superadmin
  admin
  user
}